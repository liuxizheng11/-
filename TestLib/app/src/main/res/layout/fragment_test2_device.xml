<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/fragment_test2_device_b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始" />

        <Button
            android:id="@+id/fragment_test2_device_b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止" />

        <TextView
            android:id="@+id/fragment_test2_device_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_cccccc_5px"
            android:padding="5dp" />

    </LinearLayout>

</ScrollView>