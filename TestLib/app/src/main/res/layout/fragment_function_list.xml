<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/function_list_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="所有设备列表" />

        <Button
            android:id="@+id/function_list_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已绑定设备列表" />

        <EditText
            android:id="@+id/function_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="指标ID"
            android:inputType="phone"
            android:maxLength="4" />

        <Button
            android:id="@+id/function_list_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据来源列表" />

        <Button
            android:id="@+id/function_list_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="前端设备列表" />

        <Button
            android:id="@+id/function_list_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据获取服务日志查看" />

        <Button
            android:id="@+id/function_list_07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录" />



    </LinearLayout>

</ScrollView>