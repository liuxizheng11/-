<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="15dp"
    android:paddingRight="12dp">

    <View
        android:id="@+id/view_item_hbp_doctor_details"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:background="@color/rcbase_app_main" />

    <TextView
        android:id="@+id/tv_item_hbp_doctor_details_content"
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:lineSpacingExtra="@dimen/linepaddingbutton"
        android:layout_toRightOf="@+id/view_item_hbp_doctor_details"
        android:textColor="@color/rcbase_app_text_default"
        android:layout_height="wrap_content" />
</RelativeLayout>