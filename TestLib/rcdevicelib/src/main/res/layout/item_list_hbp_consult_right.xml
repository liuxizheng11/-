<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp">

    <TextView
        android:id="@+id/tv_item_hbp_consult_time_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="13.10"
        android:textColor="@color/rcbase_app_text_default_999"
        android:textSize="11dp" />

    <com.rocedar.deviceplatform.app.view.CircleImageView
        android:id="@+id/civ_item_hbp_consult_head_right"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_item_hbp_consult_time_right"
        android:background="@color/white"
        android:src="@mipmap/ic_hypertension_head"
        app:border_color="#ccc"
        app:border_width="1px" />

    <TextView
        android:id="@+id/tv_item_hbp_consult_content_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/civ_item_hbp_consult_head_right"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@+id/civ_item_hbp_consult_head_right"
        android:background="@drawable/img_hbp_dialog_right"
        android:gravity="center_vertical|left"
        android:lineSpacingExtra="@dimen/linepaddingbutton"
        android:minLines="2"
        android:padding="10dp"
        android:text="发际偶发刘嘉玲发酒疯了发际偶发际偶发刘嘉玲发酒疯了发际偶发刘嘉玲发酒疯了发刘嘉玲发酒疯了发际偶发刘嘉玲发酒疯了"
        android:textColor="@color/rcbase_app_text_default"
        android:textSize="13dp" />
</RelativeLayout>