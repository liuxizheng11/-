<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@drawable/bg_listview_corner_no_stroke"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="137dp">

        <ImageView
            android:id="@+id/iv_item_choice_device_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rcbase_app_line_default" />

    <TextView
        android:id="@+id/tv_item_choice_device_name"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/rcbase_app_text_default"
        android:textSize="14dp" />
</LinearLayout>