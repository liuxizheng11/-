<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:padding="10dp"
        android:text="IP设置"
        android:textSize="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rcbase_app_line_default" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="应用"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rcbase_app_line_default" />

    <EditText
        android:id="@+id/activity_ip_app_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_ip_app_url_bt_nw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_main_5px"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="内网"
            android:textColor="@color/rcbase_white" />

        <TextView
            android:id="@+id/activity_ip_app_url_bt_gw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_main_5px"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="公网"
            android:textColor="@color/rcbase_white" />

        <TextView
            android:id="@+id/activity_ip_app_url_bt_zdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_cccccc_5px"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="自定义" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/rcbase_app_line_default" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="平台"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rcbase_app_line_default" />

    <EditText
        android:id="@+id/activity_ip_pt_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_ip_pt_url_bt_nw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_main_5px"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="内网"
            android:textColor="@color/rcbase_white" />

        <TextView
            android:id="@+id/activity_ip_pt_url_bt_gw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_main_5px"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="公网"
            android:textColor="@color/rcbase_white" />

        <TextView
            android:id="@+id/activity_ip_pt_url_bt_zdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_cccccc_5px"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="自定义" />

    </LinearLayout>


    <TextView
        android:id="@+id/activity_ip_url_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_main_5px"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/base_sure"
        android:textColor="@color/rcbase_white"
        android:textSize="16dp" />

 <TextView
        android:id="@+id/activity_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_main_5px"
        android:gravity="center"
        android:padding="10dp"
        android:text="DUDO"
        android:textColor="@color/rcbase_white"
        android:textSize="16dp" />

</LinearLayout>
