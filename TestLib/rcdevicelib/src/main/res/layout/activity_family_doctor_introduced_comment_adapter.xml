<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/activity_f_d_i_comment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLength="11"
            android:ellipsize="end"
            android:textColor="#999999"
            android:textSize="12dp" />


        <com.rocedar.deviceplatform.app.view.MyRatingBar
            android:id="@+id/activity_f_d_i_comment_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/activity_f_d_i_comment_username"
            app:clickable="false"
            app:halfstart="true"
            app:starCount="5"
            app:starEmpty="@mipmap/ic_star_big_gray"
            app:starFill="@mipmap/ic_star_big_orang"
            app:starHalf="@mipmap/ic_star_small_half"
            app:starImageHeight="11dp"
            app:starImagePadding="2.5dp"
            app:starImageWidth="11dp" />

        <TextView
            android:id="@+id/activity_f_d_i_comment_start_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/activity_f_d_i_comment_start"
            android:textColor="#ffa820"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/activity_f_d_i_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:textSize="10dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/activity_f_d_i_comment_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:lineSpacingExtra="@dimen/linepaddingbutton"
        android:textColor="#666666"
        android:textSize="13dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/rcbase_app_line_default" />


</LinearLayout>