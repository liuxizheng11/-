<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/rcbase_white">

        <RelativeLayout
            android:id="@+id/device_manager_iv_rl"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/device_manager_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/device_manager_role"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:background="#7f000000"
                android:gravity="center"
                android:textColor="@color/rcbase_white"
                android:textSize="11dp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/device_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/devie_status_ll"
            android:layout_toRightOf="@+id/device_manager_iv_rl"
            android:textColor="@color/rcbase_app_text_default"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/devie_status_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_from_status_binding_ok"
                android:layout_width="76dp"
                android:layout_height="28dp"
                android:gravity="center"
                android:text="@string/rcdevice_info_isbinding"
                android:visibility="gone"
                android:textColor="@color/rcbase_app_main"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/device_manager_wifi"
                android:layout_width="76dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle_main_sloke_2px"
                android:gravity="center"
                android:text="@string/rcdevice_my_device_wifi"
                android:visibility="gone"
                android:textColor="@color/rcbase_app_main"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/device_manager_dont_binding"
                android:layout_width="76dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/rectangle_main_5px"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/rcbase_white"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>