<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rcbase_white"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hbp_consult_professor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8.5dp"
        android:layout_marginRight="8.5dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_hbp_consult_professor_stop"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/rcbase_app_main_btn"
        android:gravity="center"
        android:text="@string/high_blood_pressure_consult_professor_stop"
        android:textColor="@color/rcbase_white"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/rcbase_app_line_default" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <EditText
            android:id="@+id/et_hbp_consult_professor_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:layout_toLeftOf="@+id/tv_hbp_consult_professor_send"
            android:background="@color/edit_bacground_null"
            android:textColor="@color/rcbase_app_text_default"
            android:textColorHint="@color/rcbase_app_text_default_999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_hbp_consult_professor_send"
            android:layout_width="48dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@color/rcbase_app_main_btn"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/rcbase_white"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_hbp_consult_professor_edit"
            android:background="@color/rcbase_app_line_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_hbp_consult_professor_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_hbp_consult_professor_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@mipmap/ic_picture" />

            <ImageView
                android:id="@+id/iv_hbp_consult_professor_photograph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@mipmap/ic_photograph" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_hbp_consult_unclickable"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:src="@mipmap/img_unclickable"
        android:visibility="gone" />
</LinearLayout>
