<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_choice_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rcbase_white"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_chocie_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rcbase_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rcbase_app_line_default" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_choice_device"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_choice_other_device"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/rcbase_app_main"
        android:gravity="center"
        android:text="@string/rcdevice_home_other_device"
        android:textColor="@color/rcbase_white"
        android:textSize="16dp"
        android:visibility="gone" />
</LinearLayout>

