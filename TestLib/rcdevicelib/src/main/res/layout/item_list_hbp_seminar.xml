<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="92dp">
    <!--头像-->
    <com.rocedar.deviceplatform.app.view.CircleImageView
        android:id="@+id/iv_item_hbp_seminar_head"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:background="@color/white"
        app:border_color="#ccc"
        app:border_width="1px" />

    <!--姓名-->
    <TextView
        android:id="@+id/tv_item_hbp_seminar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/iv_item_hbp_seminar_head"
        android:text="哈喽"
        android:textColor="@color/rcbase_app_text_default"
        android:textSize="16dp" />
    <!--职位-->
    <TextView
        android:id="@+id/tv_item_hbp_seminar_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_hbp_seminar_name"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/tv_item_hbp_seminar_name"
        android:paddingBottom="1dp"
        android:text="副主任医师"
        android:textColor="@color/rcbase_app_text_default_666"
        android:textSize="13dp" />
    <!--医院-->
    <TextView
        android:id="@+id/tv_item_hbp_seminar_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_hbp_seminar_name"
        android:layout_below="@+id/tv_item_hbp_seminar_name"
        android:layout_marginTop="8dp"
        android:text="哈喽哈喽哈喽哈喽哈喽"
        android:textColor="@color/rcbase_app_text_default_666"
        android:textSize="13dp" />

    <!--科室-->
    <TextView
        android:id="@+id/tv_item_hbp_seminar_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_item_hbp_seminar_hospital"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/tv_item_hbp_seminar_hospital"
        android:text="儿科"
        android:textColor="@color/rcbase_app_text_default_666"
        android:textSize="13dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/rcbase_app_line_default" />
</RelativeLayout>
