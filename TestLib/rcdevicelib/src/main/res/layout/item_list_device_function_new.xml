<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:background="@color/rcbase_white">

    <ImageView
        android:id="@+id/device_manager_iv"
        android:layout_width="52dp"
        android:layout_height="37dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/device_manager_role"
        android:layout_width="52dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/device_manager_iv"
        android:layout_alignLeft="@+id/device_manager_iv"
        android:background="#7f000000"
        android:gravity="center"
        android:textColor="@color/rcbase_white"
        android:textSize="11dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/device_manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/device_manager_iv"
        android:textColor="@color/rcbase_app_text_default"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/devie_status_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/device_manager_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:paddingBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/data_from_status_binding_ok"
            android:layout_width="76dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="@string/rcdevice_info_isbinding"
            android:textColor="@color/rcbase_app_main"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/device_manager_wifi"
            android:layout_width="76dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/rcdevice_my_device_wifi"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/device_manager_dont_binding"
            android:layout_width="76dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle_main_5px"
            android:gravity="center"
            android:textColor="@color/rcbase_white"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>