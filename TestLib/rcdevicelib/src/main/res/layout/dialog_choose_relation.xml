<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_task_remind_period_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/rcbase_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lxpressure_confirm"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/rcdevice_sure"
            android:textColor="@color/rcbase_app_main" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/rcbase_app_line_default" />

        <com.rocedar.deviceplatform.app.view.RCDeviceWheelView
            android:id="@+id/wheelview_lxpressure"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@color/rcbase_white"
            android:clickable="false"
            android:focusable="false"
            app:itemNumber="5"
            app:lineColor="#d4d4d4"
            app:lineHeight="1px"
            app:maskHight="18dp"
            app:noEmpty="true"
            app:normalTextColor="#9e9e9e"
            app:normalTextSize="15dp"
            app:selectedTextColor="#333333"
            app:selectedTextSize="22dp"
            app:unitHight="40dp" />

    </LinearLayout>
</RelativeLayout>