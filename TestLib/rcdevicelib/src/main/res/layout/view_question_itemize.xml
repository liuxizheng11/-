<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <LinearLayout
        android:id="@+id/view_question_itemize_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">


        <View
            android:layout_width="19dp"
            android:layout_height="1px"
            android:background="@color/rcbase_app_main" />

        <TextView
            android:id="@+id/view_question_itemize_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/rcbase_app_main"
            android:textSize="13dp" />


        <View
            android:layout_width="19dp"
            android:layout_height="1px"
            android:background="@color/rcbase_app_main" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_question_itemize_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>