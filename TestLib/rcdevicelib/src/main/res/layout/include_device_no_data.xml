<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/devices_dont_data_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:visibility="gone"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/devices_dont_data_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/devices_dont_data_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="@string/rcdevice_device_no_data_text"
        android:textColor="#666666"
        android:visibility="gone"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/devices_dont_data_binding"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_marginTop="66dp"
        android:gravity="center"
        android:text="@string/rcdevice_go_binding"
        android:layout_marginBottom="20dp"
        android:textColor="@color/rcbase_white"
        android:textSize="16dp" />
</LinearLayout>