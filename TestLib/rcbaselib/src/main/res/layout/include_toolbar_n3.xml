<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginStart="0dp"
    android:background="@color/rcbase_app_main_btn"
    android:contentInsetEnd="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetStart="0dp"
    app:paddingStart="0dp">

    <TextView
        android:id="@+id/toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/rectangle_transparent"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="@color/rcbase_app_main" />

    <View
        android:id="@+id/toolbar_line"
        android:layout_width="1px"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@color/rcbase_white" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center|center_vertical"
        android:maxLength="16"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/rcbase_white"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/toolbar_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/rectangle_transparent"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:textColor="@color/rcbase_white"
        android:textSize="14dp" />

</android.support.v7.widget.Toolbar>