<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@color/rcbase_white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/view_dialog_message_text_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-20dp"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="30dp"
        android:textColor="@color/rcbase_app_text_default"
        android:textSize="18dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/view_dialog_message_text_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="40dp"
        android:textColor="@color/rcbase_app_text_default"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_dialog_message_button_certen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rcbase_app_main"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:text="@string/base_sure"
            android:textColor="@color/rcbase_white"
            android:textSize="15dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/messgagedialog_button_left_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/view_dialog_message_left_dy"
            android:gravity="center">

            <TextView
                android:id="@+id/view_dialog_message_button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/base_cancel"
                android:textColor="@color/rcbase_app_text_default"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/messgagedialog_button_right_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/rcbase_app_main"
            android:gravity="center">

            <TextView
                android:id="@+id/view_dialog_message_button_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/base_sure"
                android:textColor="@color/rcbase_white"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>