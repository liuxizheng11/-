<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rcbase_view_head_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/rcbase_view_head_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/rcbase_view_head_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rcbase_white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/rcbase_view_head_back"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/rectangle_transparent"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:textColor="@color/rcbase_app_main" />

        <TextView
            android:id="@+id/rcbase_view_head_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/rcbase_app_text_default"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/rcbase_view_head_right"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rectangle_transparent"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/rcbase_app_main"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:id="@+id/rcbase_view_head_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#999999" />


</LinearLayout>