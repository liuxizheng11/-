<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srfl_hbp_consult_professor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8.5dp"
        android:layout_marginRight="8.5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_hbp_consult_professor"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/tv_hbp_consult_professor_stop"
        android:layout_width="100dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/rc_fd_hbp_consult_professor_stop"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/rc_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_hbp_consult_clickable"
        android:visibility="gone"
        android:layout_height="85dp">

        <EditText
            android:id="@+id/et_hbp_consult_professor_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/tv_hbp_consult_professor_send"
            android:background="#00000000"
            android:paddingLeft="10dp"
            android:textColor="@color/rc_text_color"
            android:textColorHint="#999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_hbp_consult_professor_send"
            android:layout_width="48dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="?attr/RCDarkColor"
            android:gravity="center"
            android:text="发送"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/et_hbp_consult_professor_edit"
            android:background="@color/rc_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_hbp_consult_professor_edit"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_hbp_consult_professor_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@mipmap/rc_fd_ic_picture" />

            <ImageView
                android:id="@+id/iv_hbp_consult_professor_photograph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@mipmap/rc_fd_ic_photograph" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_hbp_consult_unclickable"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:src="@mipmap/rc_fd_img_unclickable"
        android:visibility="visible" />
</LinearLayout>
