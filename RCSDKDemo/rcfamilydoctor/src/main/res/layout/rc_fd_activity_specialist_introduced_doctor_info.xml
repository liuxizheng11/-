<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 医生基本信息-->
    <RelativeLayout
        android:id="@+id/activity_f_d_i_doctor_info_head_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/rc_fd_ic_evaluate">

        <FrameLayout
            android:id="@+id/activity_f_d_i_doctor_info_head_layout"
            android:layout_width="62.5dp"
            android:layout_height="62.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <!--头像-->
            <com.rocedar.lib.base.view.CircleImageView
                android:id="@+id/activity_f_d_i_doctor_info_head_image"
                android:layout_width="62.5dp"
                android:layout_height="62.5dp"
                app:rc_border_width="0dp" />

            <!--忙闲-状态-->
            <ImageView
                android:id="@+id/activity_f_d_i_doctor_info_head_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="bottom|right" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/activity_f_d_i_doctor_info_head_layout"
            android:orientation="vertical">


            <!--姓名-->
            <TextView
                android:id="@+id/activity_f_d_i_doctor_info_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rc_white"
                android:textSize="16dp" />

            <!--科室-医院-->
            <TextView
                android:id="@+id/activity_f_d_i_doctor_info_head_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/rc_white"
                android:textSize="12dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_f_d_i_doctor_info_head_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/rc_white"
                android:textSize="11dp" />


            <LinearLayout
                android:id="@+id/activity_f_d_i_doctor_info_head_my_doctor_layout"
                android:layout_width="68dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:background="@drawable/rc_fd_btn_doctor_stroke_fff"
                android:visibility="gone">

                <TextView
                    android:id="@+id/activity_f_d_i_doctor_info_head_my_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/rc_fd_my_doctor_introduced"
                    android:textColor="@color/rc_white"
                    android:textSize="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/activity_f_d_i_doctor_info_head_my_doctor_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="@string/rc_fd_introduced_add"
                android:textColor="@color/rc_white"
                android:textSize="12dp" />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/rc_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/activity_f_d_i_doctor_info_abstranct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rc_fd_introduced_abstract"
            android:textColor="#666666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/activity_f_d_i_doctor_info_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/rc_fd_introduced_license"
            android:textColor="?attr/RCDarkColor"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/activity_f_d_i_doctor_info_abstranct_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_f_d_i_doctor_info_abstranct"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="10dp"
            android:textColor="#333"
            android:textSize="13dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rc_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rc_fd_introduced_be_good_at"
            android:textColor="#666666"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/activity_f_d_i_doctor_info_be_good_at_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="10dp"
            android:textColor="#333"
            android:textSize="13dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rc_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rc_fd_introduced_evaluate"
            android:textColor="#666666"
            android:textSize="14dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rc_fd_introduced_service_evaluate"
                android:textColor="@color/rc_text_color"
                android:textSize="13dp" />

            <com.rocedar.sdk.familydoctor.view.RCMyRatingBar
                android:id="@+id/activity_f_d_i_doctor_info_evaluate_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                app:rc_clickable="false"
                app:rc_halfstart="true"
                app:rc_starCount="5"
                app:rc_starEmpty="@mipmap/rc_fd_ic_star_big_gray"
                app:rc_starFill="@mipmap/rc_fd_ic_star_big_orang"
                app:rc_starHalf="@mipmap/rc_fd_ic_star_small_half"
                app:rc_starImageHeight="15dp"
                app:rc_starImagePadding="2.5dp"
                app:rc_starImageWidth="15dp" />

            <TextView
                android:id="@+id/activity_f_d_i_doctor_info_evaluate_start_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffa820"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/activity_f_d_i_doctor_info_evaluate_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/activity_f_d_i_doctor_info_evaluate_none_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@mipmap/rc_fd_ic_details_evaluate_not" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:text="@string/rc_fd_introduced_no_evaluate"
                android:textColor="#cccccc"
                android:textSize="13dp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rc_line" />


</LinearLayout>