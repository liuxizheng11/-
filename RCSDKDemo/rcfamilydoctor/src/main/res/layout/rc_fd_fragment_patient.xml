<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_line"
    android:orientation="vertical">

    <ListView
        android:layout_alignParentTop="true"
        android:id="@+id/rc_fd_fragment_patient_listview"
        style="@style/RC_Base_ListViewTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rc_fd_fragment_patient_button" />

    <TextView
        android:id="@+id/rc_fd_fragment_patient_button"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:background="?attr/RCDarkColor"
        android:gravity="center"
        android:text="@string/rc_fd_patient_add"
        android:textColor="@color/rc_white"
        android:textSize="@dimen/rc_text_size" />


</RelativeLayout>