<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp">

    <TextView
        android:id="@+id/iv_item_xun_yi_consult_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:textColor="#999999"
        android:textSize="11dp" />

    <com.rocedar.lib.base.view.CircleImageView
        android:id="@+id/iv_item_xun_yi_consult_head_left"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@+id/iv_item_xun_yi_consult_time_left"
        app:rc_border_color="#ccc"
        android:layout_marginLeft="15dp"
        app:rc_border_width="1px" />

    <TextView
        android:id="@+id/tv_item_xun_yi_consult_content_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_item_xun_yi_consult_time_left"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="65dp"
        android:layout_toRightOf="@+id/iv_item_xun_yi_consult_head_left"
        android:background="@drawable/img_xun_yi_dialog_lef"
        android:gravity="center_vertical|left"
        android:lineSpacingMultiplier="1.4"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/rc_text_color"
        android:textSize="13dp" />
    <TextView
        android:id="@+id/tv_item_xun_yi_consult_left_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:text="@string/rc_xun_yi_finish"
        android:layout_below="@+id/tv_item_xun_yi_consult_content_left"
        android:layout_marginBottom="17dp"
        android:textColor="#999999"
        android:textSize="11dp" />
</RelativeLayout>