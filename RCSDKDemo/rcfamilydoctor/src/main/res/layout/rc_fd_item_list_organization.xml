<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <com.rocedar.lib.base.view.CircleImageView
        android:id="@+id/civ_item_fd_organization_icon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp" />

    <TextView
        android:id="@+id/tv_item_fd_organization_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/tv_item_fd_organization_consult"
        android:layout_toRightOf="@+id/civ_item_fd_organization_icon"
        android:singleLine="true"
        android:textColor="@color/rc_text_color"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_item_fd_organization_consult"
        android:layout_width="77dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:background="?attr/RCDarkColor"
        android:gravity="center"
        android:text="@string/rc_fd_consult_server_now"
        android:textColor="@android:color/white"
        android:textSize="13dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="?attr/RCDarkColor" />
</RelativeLayout>