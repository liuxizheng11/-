<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_family_doctor_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="119dp"
        android:src="@mipmap/rc_fd_ic_doctor_not"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_family_doctor_office"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:gravity="center|top"
        android:text="@string/rc_fd_office_no_doctor"
        android:textColor="#666666"
        android:textSize="15dp"
        android:visibility="gone" />

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_duration_to_close="200"
        app:ptr_duration_to_close_header="1000"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_pull_to_fresh="false"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        app:ptr_resistance="3">


        <ListView
            android:id="@+id/lv_family_doctor_office"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:visibility="gone" />

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
</LinearLayout>