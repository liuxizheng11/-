<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rc_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <TextView
                android:id="@+id/rc_fragment_xun_yi_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="@string/rc_xun_yi_patient"
                android:textColor="@color/rc_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/rc_fragment_xun_yi_add_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="@string/rc_xun_yi_patient_add"
                android:textColor="?attr/RCDarkColor"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/rc_line" />

        <EditText
            android:id="@+id/rc_fragment_xun_yi_user_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/rc_xun_yi_patient_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:lineSpacingMultiplier="1"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/rc_text_color"
            android:textColorHint="@color/rc_text_color_none"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rc_white"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <TextView
                android:id="@+id/rc_fragment_xun_yi_user_content_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@color/rc_text_color_none"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/rc_xun_yi_patient_number"
                android:textColor="@color/rc_text_color_none"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="14dp"
            android:background="@color/rc_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rc_white"
            android:orientation="vertical"
            android:paddingBottom="24dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rc_xun_yi_patient_photo"
                android:textColor="@color/rc_text_color"
                android:textSize="14dp" />

            <com.rocedar.lib.base.view.RCChooseImageView
                android:id="@+id/rc_fragment_xun_yi_imagechoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:rc_max_choose_number="5" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="@color/rc_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@color/rc_white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rc_fragment_xun_yi_user_content_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/rc_xun_yi_user_jianpan" />
        <ImageView
            android:id="@+id/rc_fragment_xun_yi_user_voice_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/rc_xun_yi_user_voice" />
        <ImageView
            android:id="@+id/rc_fragment_xun_yi_user_photo_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/rc_xun_yi_user_photo" />
    </LinearLayout>
</RelativeLayout>