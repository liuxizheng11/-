<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/rc_xun_yi_fragment_inquiry_list"
        style="@style/RC_Base_ListViewTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rc_line"
        android:dividerHeight="9dp" />
    <LinearLayout
        android:id="@+id/rc_xun_yi_inquiry_no_data_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="88dp"
            android:src="@mipmap/rc_no_data_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37dp"
            android:gravity="center|top"
            android:text="@string/rc_xun_yi_no_data"
            android:textColor="#666666"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>