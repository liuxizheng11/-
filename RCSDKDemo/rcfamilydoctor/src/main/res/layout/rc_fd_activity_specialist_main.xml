<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_doctor_office_headlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_doctor_office_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_doctor_office_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:text="@string/rc_fd_office_screen"
                android:textColor="?attr/RCDarkColor"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_doctor_office_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/rc_fd_ic_unfold"
                android:layout_toRightOf="@+id/tv_doctor_office_screen" />


        </RelativeLayout>

        <View
            android:id="@+id/view_doctor_office_screen"
            android:layout_width="1px"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:background="@color/rc_line" />

        <TextView
            android:id="@+id/tv_doctor_consult_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rc_fd_consult_record"
            android:textColor="#666666"
            android:textSize="14dp" />

        <View
            android:layout_width="1px"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:background="@color/rc_line" />

        <TextView
            android:id="@+id/tv_doctor_my_doctor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rc_fd_my_doctor"
            android:textColor="#666666"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rc_line" />

    <FrameLayout
        android:id="@+id/fl_doctor_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>
