<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_line"
    android:orientation="vertical">

    <ListView
        android:id="@+id/rc_fragment_xun_yi_service_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/rc_white"
        android:divider="@color/rc_line"
        android:dividerHeight="8dp" />

    <LinearLayout
        android:id="@+id/rc_fragment_xun_yi_service_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rc_fragment_xun_yi_service_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rc_xun_yi_ic_protocol_select"
                />

            <TextView
                android:id="@+id/rc_fragment_xun_yi_service_protocol_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="3dp"
                android:text="@string/rc_xun_yi_protocol_content"
                android:textColor="@color/rc_text_color_light"
                android:textSize="11dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/rc_fragment_xun_yi_service_commit"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="22dp"
            android:background="?attr/RCDarkColor"
            android:gravity="center"
            android:text="@string/rc_xun_yi_commit"
            android:textColor="@color/rc_white"
            android:textSize="15dp" />
    </LinearLayout>
</RelativeLayout>
