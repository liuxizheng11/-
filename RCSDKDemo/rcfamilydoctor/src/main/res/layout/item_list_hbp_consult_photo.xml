<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp">

    <TextView
        android:id="@+id/tv_item_hbp_consult_time_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:textColor="#999999"
        android:textSize="11dp" />

    <com.rocedar.lib.base.view.CircleImageView
        android:id="@+id/civ_item_hbp_consult_head_photo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_item_hbp_consult_time_right"
        android:background="@android:color/white"
        android:src="@mipmap/rc_fd_ic_head_hbp"
        app:rc_border_color="#ccc"
        app:rc_border_width="1px" />

    <RelativeLayout
        android:layout_alignTop="@+id/civ_item_hbp_consult_head_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@+id/civ_item_hbp_consult_head_photo">

        <ImageView
            android:id="@+id/tv_item_hbp_consult_photo"
            android:layout_width="112dp"
            android:layout_height="120dp"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="112dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/rc_fd_img_hbp_frame" />

    </RelativeLayout>

</RelativeLayout>