<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rc_adapter_xun_yi_service_content_rl"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:background="@drawable/rc_xun_yi_service_bg">

        <ImageView
            android:id="@+id/rc_adapter_xun_yi_service_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/rc_adapter_xun_yi_service_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/rc_adapter_xun_yi_service_money"
            android:layout_toRightOf="@+id/rc_adapter_xun_yi_service_head"
            android:textColor="@color/rc_text_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/rc_adapter_xun_yi_service_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/rc_adapter_xun_yi_service_select"
            android:textColor="#f6a23f"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/rc_adapter_xun_yi_service_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/rc_xun_yi_service_select_bg"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>
</LinearLayout>