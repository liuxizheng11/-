<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rc_rl_doctor_office_screen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rc_tv_doctor_office_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/rc_mingyi_administrative_office"
                android:textColor="@color/rc_mingyi_title_text"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/rc_iv_doctor_office_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/rc_fd_ic_packup"
                android:layout_toRightOf="@+id/rc_tv_doctor_office_screen" />


        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rc_rl_doctor_consult_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rc_tv_doctor_consult_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:text="@string/rc_mingyi_service_price"
                android:maxLines="1"
                android:textColor="@color/rc_mingyi_title_text"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/rc_iv_doctor_consult_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/rc_fd_ic_packup"
                android:layout_toRightOf="@+id/rc_tv_doctor_consult_record" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:background="#e0e0e0" />

        <RelativeLayout
            android:id="@+id/rc_rl_doctor_all_hospital"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/rc_tv_doctor_all_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:maxLines="1"
                android:text="@string/rc_mingyi_all_hospital"
                android:textColor="@color/rc_mingyi_title_text"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/rc_iv_doctor_all_hospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/rc_fd_ic_packup"
                android:layout_toRightOf="@+id/rc_tv_doctor_all_hospital" />
        </RelativeLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/rc_line"/>
    <FrameLayout
        android:id="@+id/rc_fl_doctor_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>