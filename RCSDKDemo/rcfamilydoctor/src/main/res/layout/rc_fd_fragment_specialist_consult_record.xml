<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_white"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_family_doctor_consult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_family_doctor_consult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="119dp"
        android:src="@mipmap/rc_fd_img_consult_record_not"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_family_doctor_consult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/rc_fd_no_consult_record"
        android:textColor="#666666"
        android:textSize="15dp"
        android:visibility="gone" />
</LinearLayout>