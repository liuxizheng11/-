<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/rc_fragment_my_order_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rc_white"
        app:tabIndicatorColor="?attr/RCDarkColor"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="?attr/RCDarkColor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rc_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/rc_fragment_my_order_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>