<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"
    android:background="@color/rc_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/rc_adapter_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/rc_text_color"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/rc_adapter_serial_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#f7a336"
            android:textSize="13dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/rc_line_order_from"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">

            <com.rocedar.lib.base.view.CircleImageView
                android:id="@+id/rc_family_adapter_image"
                android:layout_width="57dp"
                android:layout_height="57dp" />

            <TextView
                android:id="@+id/rc_family_adapter_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/rc_family_adapter_image"
                android:text="商品名称  "
                android:textColor="@color/rc_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/rc_adapter_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rc_family_adapter_commodity_name"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/rc_family_adapter_image"
                android:text="姓名"
                android:textColor="@color/rc_text_color_light"
                android:textSize="13dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/rc_adapter_hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="12dp"
            android:textColor="#666666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/rc_adapter_division_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:textColor="#666666"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/rc_adapter_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:textColor="#666666"
            android:textSize="13dp" />

        <RelativeLayout
            android:id="@+id/rc_adapter_my_order_expected_time_rl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="18dp"
            android:background="#f8f9fb"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/rc_my_order_expected_time"
                android:textColor="@color/rc_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/rc_adapter_my_order_expected_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/rc_text_color"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rc_adapter_my_order_subscribe_time_rl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:background="#f8f9fb"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/rc_my_order_subscribe_time"
                android:textColor="@color/rc_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/rc_adapter_my_order_subscribe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/rc_text_color"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="21dp">

        <TextView
            android:id="@+id/rc_adapter_my_order_money_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rc_adapter_my_order_money"
            android:text="@string/rc_my_order_money"
            android:textColor="@color/rc_text_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/rc_adapter_my_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/rc_text_color"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="25dp"
        android:background="#e0e0e0" />
    <!--待付款、已付款-->
    <LinearLayout
        android:id="@+id/rc_adapter_my_order_pay_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rc_adapter_my_order_video"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/rc_my_order_video"
            android:textColor="?attr/RCDarkColor"
            android:textSize="14dp"
            android:visibility="gone" />

        <com.rocedar.sdk.shop.app.order.view.TimeDownView
            android:id="@+id/rc_adapter_my_order_time_down"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rc_adapter_my_order_refund"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/rc_my_order_refund"
            android:textColor="?attr/RCDarkColor"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rc_adapter_my_order_cancle_order"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="?attr/RCDarkColor"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rc_adapter_my_order_historical_data"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="历史就诊资料"
            android:textColor="?attr/RCDarkColor"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/rc_adapter_my_order_go_pay"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@color/rc_white"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>
    <!--已完成、退款-->
    <LinearLayout
        android:id="@+id/rc_adapter_my_order_pay_ok_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/rc_adapter_my_order_examine_particulars"
            android:layout_width="102dp"
            android:layout_height="37dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/rc_my_order_examine_particulars"
            android:textColor="?attr/RCDarkColor"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="@color/rc_line" />
</LinearLayout>