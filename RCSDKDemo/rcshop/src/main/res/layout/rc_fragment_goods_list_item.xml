<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rc_bg_shop_list">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="27dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_f_goods_list_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/rc_text_color_light"
                android:textSize="19dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/rc_f_goods_list_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rc_f_goods_list_item_name"
                android:layout_marginTop="12dp"
                android:text="12"
                android:textColor="@color/rc_text_color_light"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/rc_f_goods_list_item_buy"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:text="@string/rc_shop_buy_now"
            android:textColor="@color/rc_white"
            android:textSize="13dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/transparent" />

</LinearLayout>