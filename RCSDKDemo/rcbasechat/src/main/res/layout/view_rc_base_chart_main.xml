<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_rc_base_chart_main_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:textColor="#999999"
        android:textSize="11.5dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_rc_base_chart_main_unit"
        android:layout_marginBottom="1px"
        android:orientation="horizontal"
        android:paddingRight="15dp">

        <RelativeLayout
            android:id="@+id/view_rc_base_chart_main_y_layout"
            android:layout_width="37.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="38dp"
            android:visibility="gone">

            <com.rocedar.base.chart.YCoordView
                android:id="@+id/view_rc_base_chart_main_y_show"
                android:layout_width="37dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#e0e0e0" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="38dp"
                android:background="#e0e0e0" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/view_rc_base_chart_main_rv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e0e0e0" />
</RelativeLayout>