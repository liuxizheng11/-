<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rc_adapter_health_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rc_adapter_health_video_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/rc_adapter_health_video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rc_adapter_health_video_iv"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-15dp"
            android:textColor="@color/rc_white"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/rc_adapter_health_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_adapter_health_video_iv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-15dp"
            android:src="@mipmap/rc_ic_video_play" />

        <TextView
            android:id="@+id/rc_adapter_health_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_adapter_health_video_play"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/rc_text_color"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rc_adapter_health_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/rc_adapter_health_tag_ll"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/rc_adapter_health_watch_number"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/rc_adapter_health_watch_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/rc_video_watch_number"
                android:drawablePadding="3dp"
                android:textColor="@color/rc_text_color_none"
                android:textSize="10dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/rc_xun_yi_video_bg" />
    </RelativeLayout>

    <include layout="@layout/rc_include_adapter_health_class_article_litem" />
</LinearLayout>