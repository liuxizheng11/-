<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rc_white"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/activity_base_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/rc_include_top_view" />

        <include layout="@layout/rc_include_toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_base_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33404558"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="?attr/RCDarkColor"
                android:textSize="13dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/activity_base_main_error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/activity_base_main_error_layout_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="120dp"
                    android:src="@mipmap/rc_ic_network" />

                <TextView
                    android:id="@+id/activity_base_main_error_layout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="@string/rc_get_data_error"
                    android:textColor="@color/rc_text_color"
                    android:textSize="@dimen/rc_text_size" />


            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>