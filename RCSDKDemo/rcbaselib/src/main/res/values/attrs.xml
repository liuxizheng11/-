<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- app主颜色，用于与主颜色相关的背景、文字等-->
    <!-- 深色-->
    <attr name="RCDarkColor" format="color|reference" />
    <!-- 浅色-->
    <attr name="RCLightColor" format="color|reference" />
    <!-- 按钮圆角-->
    <attr name="RCButtonRadius" format="dimension" />
    <!-- 头背景色-->
    <attr name="RCHeadBG" format="color|reference" />


    <declare-styleable name="CircleImageView">
        <attr name="rc_border_width" format="dimension" />
        <attr name="rc_border_color" format="color" />
    </declare-styleable>


    <declare-styleable name="RCPersonWheelView">
        <attr name="rc_normalTextColor" format="color" />
        <attr name="rc_normalTextSize" format="dimension" />
        <attr name="rc_selectedTextColor" format="color" />
        <attr name="rc_selectedTextSize" format="dimension" />
        <attr name="rc_unitHight" format="dimension" />
        <attr name="rc_itemNumber" format="integer" />
        <attr name="rc_lineColor" format="color" />
        <attr name="rc_lineHeight" format="dimension" />
        <attr name="rc_maskHight" format="dimension" />
        <attr name="rc_noEmpty" format="boolean" />
        <attr name="rc_isEnable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RCSubsamplingScaleImageView">
        <attr name="rc_src" format="reference" />
        <attr name="rc_assetName" format="string" />
        <attr name="rc_panEnabled" format="boolean" />
        <attr name="rc_zoomEnabled" format="boolean" />
        <attr name="rc_quickScaleEnabled" format="boolean" />
        <attr name="rc_tileBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RCScaleChat">
        <attr name="rc_max_number" format="integer" />
        <attr name="rc_min_number" format="integer|float" />
        <attr name="rc_default_choose" format="integer" />
        <attr name="rc_multiply" format="enum">
            <enum name="one" value="1" />
            <enum name="tenth" value="2" />
            <enum name="ten" value="3" />
        </attr>
        <attr name="rc_unit" format="string" />
    </declare-styleable>

    <declare-styleable name="RCChooseImageView">
        <attr name="rc_max_choose_number" format="integer" />
    </declare-styleable>

</resources>